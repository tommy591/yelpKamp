<% layout('layout/boilerplate') -%>
<div class="jumbotron">
    <h1 class="display-4 mt-2">Welcome to Yelp Kamp</h1>
    <p class="lead">
        We are glad that you could join us today.<br />
        Please feel free to expolre all of our wonderful campsites or add a campground an share with others alike.<br/>So have fun
        an happy camping!!
    </p>
    <hr />
</div>

<% for (let campground of campgrounds) { %>
<div class="card mb-2" style="width: 55rem">
    <div class="row">
        <div class="col-md-4 mt-2">
            <img
                src="<%= campground.image %> "
                class="card-img-top img-fluid img-thumbnail"
                alt="..."
            />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <strong><%= campground.name %></strong>
                </h5>

                <p class="card-text"><%= campground.description %></p>
                <h6 class="text-muted"><em><%= campground.location %></em></h6>
                <p class="card-text">
                    <strong>$<%= campground.price %>/per night</strong>
                </p>

                <a
                    href="/campgrounds/<%= campground._id %>"
                    class="btn btn-primary btn-sm"
                    ><%= campground.name %></a
                >
            </div>
        </div>
    </div>
</div>
<% } %>
